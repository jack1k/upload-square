{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "jsx": "react-jsx", // ðŸ‘ˆ if using React 17+ with new JSX transform
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": false,
        "isolatedModules": true,
        "noEmit": true, // Babel does the transpiling
        "strict": true, // ðŸ‘ˆ makes types better but optional â€” you can turn this off to ease in
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
